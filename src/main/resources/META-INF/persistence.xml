<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Flavie">
		<jta-data-source>jdbc/Flavie</jta-data-source>
        <class>net.minedof.web.model.entity.Account</class>
        <class>net.minedof.web.model.Address</class>
        <class>net.minedof.web.model.entity.Client</class>
        <class>net.minedof.web.model.entity.Enterprise</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mariadb://localhost:3306/flavie"/>
            <property name="eclipselink.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
